{{ 'section-instagram-feed.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="instagram-feed color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="instagram-feed__header{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {%- if section.settings.heading != blank -%}
        <h2 class="instagram-feed__title {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.instagram_handle != blank -%}
        <a
          href="https://instagram.com/{{ section.settings.instagram_handle | remove: '@' }}"
          target="_blank"
          rel="noopener"
          class="instagram-feed__handle"
        >
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="instagram-feed__icon">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
          @{{ section.settings.instagram_handle | remove: '@' }}
        </a>
      {%- endif -%}
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="instagram-feed__grid instagram-feed__grid--{{ section.blocks.size }}-items{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {%- for block in section.blocks -%}
          <a
            href="{{ block.settings.post_url | default: section.settings.instagram_handle | prepend: 'https://instagram.com/' }}"
            target="_blank"
            rel="noopener"
            class="instagram-feed__item"
            {{ block.shopify_attributes }}
          >
            {%- if block.settings.image != blank -%}
              <div class="instagram-feed__media">
                {{
                  block.settings.image
                  | image_url: width: 600
                  | image_tag:
                    widths: '200, 300, 400, 600',
                    sizes: '(min-width: 990px) 16vw, (min-width: 750px) 25vw, 33vw',
                    loading: 'lazy',
                    class: 'instagram-feed__image'
                }}
                {%- if block.settings.is_video -%}
                  <div class="instagram-feed__video-indicator">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                {%- endif -%}
                <div class="instagram-feed__overlay">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                  </svg>
                </div>
              </div>
            {%- else -%}
              <div class="instagram-feed__media instagram-feed__placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}
          </a>
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="instagram-feed__empty">
        <p>Add Instagram posts in the theme editor to display your feed.</p>
      </div>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <div class="instagram-feed__cta{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <a
          href="https://instagram.com/{{ section.settings.instagram_handle | remove: '@' }}"
          target="_blank"
          rel="noopener"
          class="button button--secondary"
        >
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Instagram Feed",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Follow Us on Instagram",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram handle",
      "default": "yourusername",
      "info": "Your Instagram username (without @)"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Follow Us"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "post",
      "name": "Post",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Upload a screenshot or image from your Instagram post"
        },
        {
          "type": "url",
          "id": "post_url",
          "label": "Post URL",
          "info": "Direct link to the Instagram post"
        },
        {
          "type": "checkbox",
          "id": "is_video",
          "default": false,
          "label": "This is a video/reel",
          "info": "Shows a play icon indicator"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "blocks": [
        { "type": "post" },
        { "type": "post" },
        { "type": "post" },
        { "type": "post" },
        { "type": "post" },
        { "type": "post" }
      ]
    }
  ]
}
{% endschema %}
