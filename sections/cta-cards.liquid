{{ 'section-cta-cards.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="cta-cards gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.blocks.size > 0 -%}
      <div class="cta-cards__grid cta-cards__grid--{{ section.blocks.size }}-items{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {%- for block in section.blocks -%}
          <a
            href="{{ block.settings.link | default: section.settings.main_button_link }}"
            class="cta-card"
            {{ block.shopify_attributes }}
          >
            <div class="cta-card__content">
              {%- if block.settings.title != blank -%}
                <h3 class="cta-card__title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.price != blank -%}
                <p class="cta-card__price">{{ block.settings.price }}</p>
              {%- endif -%}

              {%- if block.settings.button_label != blank -%}
                <span class="cta-card__button">
                  {{ block.settings.button_label }} â†’
                </span>
              {%- endif -%}
            </div>

            {%- if block.settings.image != blank -%}
              <div class="cta-card__image-wrapper">
                {{
                  block.settings.image
                  | image_url: width: 400
                  | image_tag:
                    widths: '140, 200, 280, 400',
                    sizes: '140px',
                    class: 'cta-card__image'
                }}
              </div>
            {%- else -%}
              <div class="cta-card__image-wrapper cta-card__placeholder">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}
          </a>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "CTA Cards",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "CTA Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Couple Figurine"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price text",
          "default": "Starting at $99"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Order Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "If empty, uses the main button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CTA Cards",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "Couple Figurine",
            "price": "Starting at $149"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Single Figurine",
            "price": "Starting at $99"
          }
        }
      ]
    }
  ]
}
{% endschema %}
